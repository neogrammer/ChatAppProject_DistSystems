<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.chatauth.fragment.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_chatWebviewFragment"
            app:destination="@id/chatWebviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatWebviewFragment"
        android:name="com.example.chatauth.fragment.chat.ChatWebviewFragment"
        android:label="fragment_chat_webview"
        tools:layout="@layout/fragment_chat_webview" >
        <argument
            android:name="args"
            app:argType="com.example.chatauth.fragment.chat.ChatWebviewFragment$Arguments" />
    </fragment>
</navigation>